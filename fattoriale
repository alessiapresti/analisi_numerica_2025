PROGRAM FATTORIALE

IMPLICIT NONE 
INTEGER :: N, X, TOTINT
REAL*8 :: TOTR8
REAL*16 :: TOTR16 
COMPLEX :: TOTC 

N=1 
TOTINT=1 
TOTR8=1 
TOTR16=1 
TOTC=1 

PRINT*, 'DIGITA UN NUMERO'
READ*, X 

    DO N=1,X 
        TOTINT=TOTINT*N 
        TOTR8=TOTR8*N
        TOTR16=TOTR16*N
        TOTC=TOTC*N
            PRINT*, N, TOTINT, TOTR8, TOTR16, TOTC 
    END DO 
    PRINT*, 'IL FATTORIALE DI', X, 'E', TOTINT, TOTR8, TOTR16, TOTC
END 
