PROGRAM BABILONESI 

REAL*8 A,X, Y, Z, K 
INTEGER I 

PRINT*, 'DIGITARE UN NUMERO, NON NEGATIVO, DI CUI CALCOLARE LA RADICE'
READ*, A 

Y=3
X=0 
Z=0 
I=1 
K=10D-5

DO WHILE (ABS(Y-Z).GT.K)
    Z=Y 
    X=0.5*(Y+(A/Y))
    Y=X 
    PRINT*, 'ITERATA:', I, ';VALORE DI PARTENZA:', Y, ';TOLLERANZA:', K  
    I=I+1 
END DO 

PRINT*, 'RADICE:', X    

END 
